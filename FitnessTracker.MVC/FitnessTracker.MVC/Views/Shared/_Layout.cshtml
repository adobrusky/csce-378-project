@{
    string currentController = ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessTracker.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div id="navbar" class="navbar fixed-bottom navbar-light bg-light">
            <div class="container">
                <div class="d-flex justify-content-between w-100">
                    <a class="btn d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home fa-xl @(currentController == "Home" ? "active" : "")"></i>
                    </a>
                    <a class="btn d-flex align-items-center" asp-controller="Workout" asp-action="Index">
                        <i class="fa fa-calendar fa-xl @(currentController == "Workout" ? "active" : "")"></i>
                    </a>
                    <a class="btn d-flex align-items-center" asp-controller="Compete" asp-action="Index">
                        <i class="fa-solid fa-chart-simple fa-xl  @(currentController == "Compete" ? "active" : "")"></i>
                    </a>
                    <!-- We don't need this to link to anything for any of our tasks -->
                    <a href="#" class="btn d-flex align-items-center">
                        <i class="fa fa-user fa-xl"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
