@{
    ViewData["Title"] = "Add Existing Workout";
}

@section css{
    <link rel="stylesheet" href="~/css/workout.css" asp-append-version="true" />
}

@model WorkoutModel

<h2>@Model.Name</h2>

<ul>
    @foreach (var exercise in Model.Exercises)
    {
        <li>
            @exercise.Name - @exercise.MetricToMeasure
        </li>
    }
</ul>

<form method="post" action="@Url.Action("AddWorkoutToMyWorkouts", "Workout")">
    <input type="hidden" name="workoutName" value="@Model.Name" />
    <input type="hidden" name="category" value="@Model.Category" />
    <label for="workoutDate">Date:</label>
    <input type="date" id="workoutDate" name="workoutDate" required />
    <button type="submit">Add Workout</button>
</form>
