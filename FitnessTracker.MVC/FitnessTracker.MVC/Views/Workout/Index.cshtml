@{
    ViewData["Title"] = "My Workouts";
}

@section css{
    <link rel="stylesheet" href="~/css/workout/workout.css" asp-append-version="true" />
}

@model List<DateTime>

<div class="workout-header">
    <h1 style="font-weight: bold; font-size:27px;">My Workouts</h1>
    <div class="workout-header-btns">
        <i class="fa-solid fa-filter fa-xl"></i>
        <a href="@Url.Action("AddWorkout", "Workout")"><i class="fa-solid fa-circle-plus fa-xl"></i></a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
